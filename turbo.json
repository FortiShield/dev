{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next",
        "dist/**",
        "lib/**",
        "providers/**",
        "generated/**",
        "*.js",
        "*.d.ts",
        "*.d.ts.map",
        "src/lib/pages/styles.ts",
        "src/providers/provider-types.ts",
        ".svelte-kit/**"
      ],
      "outputLogs": "new-only"
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**/", "test/**/"],
      "outputLogs": "new-only"
    },
    "test:e2e": {
      "dependsOn": ["nextauth.js/#build"],
      "outputs": [
        "blob-report/**",
        "playwright-report/**",
        "playwright/.cache/**",
        "test-results/**"
      ],
      "env": [
        "TEST_KEYCLOAK_PASSWORD",
        "TEST_KEYCLOAK_USERNAME",
        "AUTH_SECRET",
        "AUTH_KEYCLOAK_ID",
        "AUTH_KEYCLOAK_SECRET",
        "AUTH_KEYCLOAK_ISSUER",
        "AUTH_TRUST_HOST"
      ]
    },
    "@nextauth.js/xata-adapter#test": {
      "passThroughEnv": ["XATA_API_KEY", "XATA_DATABASE_URL"]
    },
    "@nextauth.js/hasura-adapter#build": {
      "dependsOn": ["@nextauth.js/core#build"],
      "outputs": [
        "lib/**",
        "*.js",
        "*.d.ts",
        "*.d.ts.map",
        "src/lib/generated/**"
      ]
    },
    "docs#dev": {
      "dependsOn": [
        "nextauth.js/#build",
        "@nextauth.js/core#build",
        "@nextauth.js/sveltekit#build",
        "@nextauth.js/express#build",
        "@nextauth.js/solid-start#build",
        "@nextauth.js/qwik#build"
      ],
      "persistent": true,
      "cache": false
    },
    "docs#build": {
      "inputs": [
        "pages/**",
        "utils/**",
        "public/**",
        "components/**",
        "theme.config.tsx",
        "typedoc*",
        "vercel.json",
        "next-sitemap.config.cjs",
        "next.config.js"
      ],
      "dependsOn": [
        "@nextauth.js/core#build",
        "@nextauth.js/azure-tables-adapter#build",
        "@nextauth.js/d1-adapter#build",
        "@nextauth.js/dgraph-adapter#build",
        "@nextauth.js/drizzle-adapter#build",
        "@nextauth.js/dynamodb-adapter#build",
        "@nextauth.js/edgedb-adapter#build",
        "@nextauth.js/fauna-adapter#build",
        "@nextauth.js/firebase-adapter#build",
        "@nextauth.js/hasura-adapter#build",
        "@nextauth.js/kysely-adapter#build",
        "@nextauth.js/mikro-orm-adapter#build",
        "@nextauth.js/mongodb-adapter#build",
        "@nextauth.js/neo4j-adapter#build",
        "@nextauth.js/pg-adapter#build",
        "@nextauth.js/pouchdb-adapter#build",
        "@nextauth.js/prisma-adapter#build",
        "@nextauth.js/sequelize-adapter#build",
        "@nextauth.js/solid-start#build",
        "@nextauth.js/supabase-adapter#build",
        "@nextauth.js/surrealdb-adapter#build",
        "@nextauth.js/sveltekit#build",
        "@nextauth.js/typeorm-adapter#build",
        "@nextauth.js/unstorage-adapter#build",
        "@nextauth.js/upstash-redis-adapter#build",
        "@nextauth.js/xata-adapter#build",
        "@nextauth.js/qwik#build",
        "nextauth.js/#build",
        "^build"
      ],
      "outputs": [
        ".next/**/*",
        "!.next/cache/**",
        "docs/reference/**",
        "!docs/reference/_meta.js"
      ]
    }
  }
}
